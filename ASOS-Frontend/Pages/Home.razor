@page "/"

<PageTitle>Domov</PageTitle>

<style>
	#logo-container {
		width: 280px;
		height: 240px;
		background: rgba(255, 255, 255, 0.90);
		backdrop-filter: blur(0px);
		-webkit-backdrop-filter: blur(0px);
	}

	#logo-bg {
		position: absolute;
		object-fit: contain;
		max-height: 575px;
		height: 90%;
		width: 90%;
		z-index: 0;
	}

	#logo-text {
		width: 225px;
		color: dimgray;
		font-family: 'SF Pro Display';
		font-weight: 400;
		font-style: normal;
		font-size: 2.19rem;
		text-shadow: white 0px 0px 2px;
	}
</style>

<RadzenRow JustifyContent="JustifyContent.Center" AlignItems="Radzen.AlignItems.Center" Style="position:relative; height:100%; width:100%;">
	<img id="logo-bg" src="/logo-bg.png" />
	<RadzenCard id="logo-container" Class="rz-shadow-0 rz-border-radius-8 rz-p-6">
		<RadzenStack JustifyContent="JustifyContent.Center" AlignItems="Radzen.AlignItems.Center" Style="height:100%">
			<RadzenIcon Icon="menu_book" Style="font-size:6.25rem;" />
			<p id="logo-text">LEARNTISIMO</p>
		</RadzenStack>
	</RadzenCard>
</RadzenRow>

